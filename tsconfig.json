{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es6",
    "module": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"]
}
