{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "module": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "typeRoots": [
      "./typings",
      "./node_modules/@types/"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  },
  "exclude": [
    "node_modules"
  ]
}