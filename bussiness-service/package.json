{
  "name": "bussiness-service",
  "version": "1.0.0",
  "description": "blog service",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --exec ts-node ./src/app.ts -e ts --ignore tests/",
    "start:prod": "cross-env NODE_ENV=production nodemon ./build/app.js",
    "build": "tsc --build",
    "serve": "pm2 start ./ecosystem.config.js --env production",
    "stop": "pm2 stop ./build/app.js",
    "build:docker": "docker build -t bussiness-service .",
    "docker:run": "docker run -d -v /Users/garry/myworkspace/blog/bussiness-service/log:/app/log -p 8080:5000 bussiness-service",
    "tslint": "tslint --fix -c ./tslint.json 'src/**/*{.ts}'"
  },
  "author": "garry",
  "license": "ISC",
  "devDependencies": {
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa": "^2.0.48",
    "@types/koa-router": "^7.0.40",
    "@types/log4js": "^2.3.5",
    "@types/mysql": "^2.15.5",
    "@types/urllib": "^2.28.1",
    "cross-env": "^5.2.0",
    "nodemon": "^1.18.10",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "log4js": "^4.0.2",
    "mockjs": "^1.0.1-beta3",
    "mysql": "^2.16.0",
    "mysql2": "^1.6.5",
    "parameter": "^3.5.0",
    "urllib": "^2.33.0"
  }
}